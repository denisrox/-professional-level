<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <File name="errorLog" fileName="error.log" append="true">
            <PatternLayout>
                <Pattern>%d{dd-MM-yyyy HH:mm:ss} [%-5p][%-20c{1}] [%-20M:%L] - %msg%n</Pattern>
            </PatternLayout>
        </File>
        <File name="infoLog" fileName="info.log" append="true">
            <PatternLayout>
                <Pattern>%d{dd-MM-yyyy HH:mm:ss} [%-5p][%-20c{1}] [%-20M:%L] - %msg%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <logger name="server"  level="INFO">
            <AppenderRef ref="errorLog" />
        </logger>
        <Root level="INFO">
            <AppenderRef ref="infoLog" />
        </Root>
    </Loggers>
</Configuration>
